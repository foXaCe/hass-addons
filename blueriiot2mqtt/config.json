{
    "name": "BlueRiiot2MQTT",
    "version": "0.1.0",
    "slug": "blueriiot2mqtt",
    "description": "Add-on to translate between Blue Riiots pool API, and HASS via MQTT",
    "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
    "url": "https://github.com/foXaCe/hass-addons",
    "startup": "application",
    "boot": "auto",
    "environment": {
        "EXTRA_CONFIG_FILE": "/data/options.json"
    },
    "options": {
        "MQTT": {
            "Server": null,
            "Port": 1883,
            "Username": "",
            "Password": ""
        },
        "BlueRiiot": {
            "Username": null,
            "Password": null,
            "Language": "fr"
        }
    },
    "schema": {
        "MQTT": {
            "Server": "str",
            "Port": "port?",
            "Username": "str?",
            "Password": "str?"
        },
        "BlueRiiot": {
            "Username": "str",
            "Password": "str",
            "Language": "list(fr|es|en|nl|de|it|pt|cs)"
        }
    },
    "image": "lordmike/blueriiot2mqtt-{arch}"
}
